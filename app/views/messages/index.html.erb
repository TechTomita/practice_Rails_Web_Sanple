<h1>メッセージ一覧</h1>
<% if @messages.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <td>タイトル</td>
                <td>メッセージ</td>
            </tr>
        </thead>
        <tbody>
            <% @messages.each do |message|%>
                <tr>
                    <td><%= link_to message.id, message %></td>
                    <td><%= message.title %></td>
                    <td><%= message.content %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<%== pagy_bootstrap_nav(@pagy)%>
<%= link_to "新規作成", new_message_path, class: "btn btn-primary" %>